<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="height=device-height, width=device-width, initial-scale=1">
        <meta charset="UTF-8" />
        <title>{% block title %}Find My Bike{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('user/style/userbasestyle.css') }}">
        {% endblock %}

        {% block style %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
       <!-- <style>
            #main {
                height: 100%;
            }
            #menubar {
                height: 20%;
            }
        </style>
        -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    </head>
    <body>
    {% block message %}

    {% endblock %}
    <div id="main">
    {% block menubar %}
        <div id="menubar">
            <ul id="menu">
                <!-- put class="selected" in the li tag for the selected page - to highlight which page you're on -->
                <li><a href="/user">Home</a></li>
                <!-- <li><a href="{{ path('lostBike') }}">Lost Bike?</a></li> -->
                <li><a href="{{ path('table') }}">detailed log</a></li>
                <li><a href="{{ path('map') }}">Map</a></li>
                {% if userState==1 %}
                <li style="background-color:green; color: white;"><a href="{{ path('active') }}?command=deactivate">
                        <font color="white">active</font></a>
                </li>
                {% else %}
                    <li><a href="{{ path('active') }}?command=activate">active</a></li>
                {% endif %}
                <button id="activation">wait</button>

                <li><a href="{{ path('setting') }}">Setting</a></li>
                <!--<li><a href="{{ path('logout') }}">logout</a></li>-->
            </ul>
        </div>
    {% endblock %}
    </div>


    {% block body %}

    {% endblock %}

    {% block javascripts %}
    {% endblock %}
    {{ include(":ees/script:ajax.active.html.twig") }}

    </body>
</html>
